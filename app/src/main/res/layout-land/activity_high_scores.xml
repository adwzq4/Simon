<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey"
    tools:context=".HighScoresActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="20dp"
            android:padding="40dp">
            <TextView
                android:id="@+id/highScoresTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/high_scores_button_label"
                android:fontFamily="@font/frijole"
                android:textAlignment="center"
                android:textSize="32sp"
                android:textColor="@color/highlightedBlue"/>
            <TextView
                android:id="@+id/lastScoreView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/last_score"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textColor="@color/highlightedRed"/>
            <Button
                android:id="@+id/newGameButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:padding="10dp"
                android:text="@string/start_new_game"
                android:textSize="24sp"
                android:background="@color/highlightedGreen"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="30dp">
                <TextView
                    android:id="@+id/rankLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/rankLabel"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_marginEnd="100dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/scoreLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/scoreLabel"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_marginEnd="100dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/dateLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/dateLabel"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/highScoresRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>