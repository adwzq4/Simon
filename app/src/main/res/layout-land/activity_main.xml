<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/mainGreetingView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginVertical="30dp"
            android:fontFamily="@font/frijole"
            android:text="@string/welcome_text"
            android:textColor="@color/highlightedRed"
            android:textSize="40sp" />
        <Button
            android:id="@+id/startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:background="@color/highlightedGreen"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="24dp"
            android:text="@string/start_button_label" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="15dp"
            android:gravity="center">
            <Button
                android:id="@+id/highScoresButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/high_scores_button_label"
                android:background="@color/highlightedYellow"
                android:textSize="24dp"
                android:layout_marginHorizontal="40dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"/>
            <TextView
                android:id="@+id/difficultyLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/difficultyLabel"
                android:textSize="24sp"
                android:textColor="@color/black" />
            <Spinner
                android:id="@+id/difficultyMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/highlightedRed"/>
            <Switch
                android:id="@+id/soundSwitch"
                android:textSize="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:switchPadding="20dp"
                android:text="@string/soundSwitchLabel" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>